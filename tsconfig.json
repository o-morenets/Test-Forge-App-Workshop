{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "allowJs": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./ui/**/*"],
  "exclude": ["node_modules"]
}
